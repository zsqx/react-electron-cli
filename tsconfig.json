{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "lib": ["esnext"],
    "baseUrl": "./",
    "sourceMap": false,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["src", "src/config"],
}
